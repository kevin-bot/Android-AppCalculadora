<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OPERACIONES MATEMATICAS"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/imagenlogo"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/logomatematica"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/txtCampo1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/background_light"
        android:hint="Ingrese el primer numero"
        android:layout_margin="4dp"/>

    <EditText
        android:id="@+id/txtCampo2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@android:color/background_light"
        android:hint="Ingrese el segundo numero"
        android:layout_margin="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnsum"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp"
            android:onClick="onclick"/>

        <Button
            android:id="@+id/btnResta"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp"
            android:onClick="onclick"/>

        <Button
            android:id="@+id/btnMul"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp"
            android:onClick="onclick"/>

        <Button
            android:id="@+id/btnDivi"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp"
            android:onClick="onclick"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tvresultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultado"
        android:textColor="#ffff"
        android:textSize="20dp"
        android:gravity="center"/>


</LinearLayout>